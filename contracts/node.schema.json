{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "id": { "type": "string" },
    "sector": { "type": "string", "enum": ["power", "water", "telecom", "wastewater", "other"] },
    "label": { "type": "string" },
    "kind": { "type": "string", "enum": ["substation", "pump", "tower", "reservoir", "plant", "service"] },
    "region": { "type": "string" },
    "lat": { "type": "number" },
    "lon": { "type": "number" },
    "health": {
      "type": "object",
      "properties": {
        "score": { "type": "number", "minimum": 0, "maximum": 1 },
        "status": { "type": "string", "enum": ["ok", "degraded", "warning"] }
      },
      "required": ["score", "status"]
    }
  },
  "required": ["id", "sector", "label", "kind", "region", "health"]
}


