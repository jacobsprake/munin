# Munin Environment Configuration
# Copy this file to .env and update values as needed

# Database Configuration
DATABASE_URL=sqlite:data/munin.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost:5432/munin

# Security
BACKUP_ENCRYPTION_KEY=change-this-in-production-min-32-chars
JWT_SECRET=change-this-in-production-min-32-chars

# Application
NODE_ENV=development
PORT=3000

# Engine Configuration
ENGINE_OUTPUT_DIR=engine/out
ENGINE_CACHE_DIR=engine/cache

# Feature Flags
ENABLE_SHADOW_MODE=false
ENABLE_CHAOS_SIMULATOR=true
ENABLE_COUNTERFACTUAL=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
